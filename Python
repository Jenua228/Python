import array
import json
from pprint import pprint

class myException(Exception): 
    def __str__(self):
        return "Введено недопустимое значение"

def read(filename):
    with open(filename,'r') as file:
        data = json.load(file)
    return(data)

def write(data, filename):
    with open(filename,'w') as file:
        json.dump(data, file)

class menu():
    def __init__(self, name, price, ingredients):
        self.name = name
        self.price = price
        if price < 0:
           raise myException()
        self.ingredients = ingredients
    def description (): pass

class dishes(menu):
    def description(self):
        print("You can eat the ", self.name, " by ", self.price, "$ with some", *self.ingredients)

class drinks(menu):
    def description(self):
        print("You can drink the ", self.name, " by ", self.price, "$ with some", *self.ingredients)

chicken = dishes("chicken", 8, ['chiken,', 'soy sauce,', 'paprika'])
chicken.description()

strawberryMilkshake = drinks("strawberry milkshake", 5, ['milk,', 'cream,', 'strawberry'])
strawberryMilkshake.description()

readJson = read('JSON_menu.json')
pprint (readJson)

#data = {'menu':{'dishes':{'dish':[{'name': 'salad','price': 7,'ingredients': 'tomato, cucumber, salad, sour cream'}}}}
data = {'dish':{'name': 'salad','price': 7,'ingredients': 'tomato, cucumber, salad, sour cream'}}
        
writeJson = write(data, 'JSON_menu.json')
